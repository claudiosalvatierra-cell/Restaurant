<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant El Chileno"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBandera"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/bandera_chile"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitulo"
        app:layout_constraintStart_toEndOf="@+id/tvTitulo"
        app:layout_constraintTop_toTopOf="@+id/tvTitulo" />

    <ImageView
        android:id="@+id/imgPastel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/pastel_choclo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo" />

    <TextView
        android:id="@+id/tvNombrePastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Pastel de Choclo"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgPastel"
        app:layout_constraintTop_toTopOf="@+id/imgPastel" />

    <TextView
        android:id="@+id/tvLabelCantPastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cant."
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvNombrePastel"
        app:layout_constraintTop_toBottomOf="@+id/tvNombrePastel" />

    <EditText
        android:id="@+id/etCantidadPastel"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelCantPastel"
        app:layout_constraintStart_toEndOf="@+id/tvLabelCantPastel"
        app:layout_constraintTop_toTopOf="@+id/tvLabelCantPastel" />

    <TextView
        android:id="@+id/tvPrecioPastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$12.000"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvNombrePastel"
        app:layout_constraintTop_toBottomOf="@+id/etCantidadPastel" />

    <ImageView
        android:id="@+id/imgCazuela"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/cazuela"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPastel" />

    <TextView
        android:id="@+id/tvNombreCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Cazuela"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imgCazuela"
        app:layout_constraintTop_toTopOf="@+id/imgCazuela" />

    <TextView
        android:id="@+id/tvLabelCantCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cant."
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvNombreCazuela"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreCazuela" />

    <EditText
        android:id="@+id/etCantidadCazuela"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:inputType="number"
        android:hint="0"
        app:layout_constraintBottom_toBottomOf="@+id/tvLabelCantCazuela"
        app:layout_constraintStart_toEndOf="@+id/tvLabelCantCazuela"
        app:layout_constraintTop_toTopOf="@+id/tvLabelCantCazuela" />

    <TextView
        android:id="@+id/tvPrecioCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10.000"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tvNombreCazuela"
        app:layout_constraintTop_toBottomOf="@+id/etCantidadCazuela" />

    <TextView
        android:id="@+id/tvTotalComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comida $0"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/switchPropina"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/switchPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propina"
        android:checked="true"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvValorPropina"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvValorPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Propina $0"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTotalFinal"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTotalFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL $0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>